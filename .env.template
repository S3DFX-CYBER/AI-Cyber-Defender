# =============================================================================
# TENET AI - Environment Configuration Template
# =============================================================================
# Copy this file to .env and update the values for your environment.
# DO NOT commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# API key for authenticating requests to TENET AI services
# IMPORTANT: Change this in production!
API_KEY=tenet-dev-key-change-in-production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# Ingest Service Configuration
# -----------------------------------------------------------------------------
# Host and port for the ingest service
INGEST_API_HOST=0.0.0.0
INGEST_API_PORT=8000

# -----------------------------------------------------------------------------
# Analyzer Service Configuration
# -----------------------------------------------------------------------------
# Host and port for the analyzer service
ANALYZER_API_HOST=0.0.0.0
ANALYZER_API_PORT=8100

# Path to trained ML models
MODEL_PATH=./models/trained

# Detection thresholds (0.0 - 1.0)
PROMPT_INJECTION_THRESHOLD=0.75
PHISHING_THRESHOLD=0.85
JAILBREAK_THRESHOLD=0.80

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# PostgreSQL Configuration (for future use)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=tenet_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# -----------------------------------------------------------------------------
# MinIO Configuration (S3-compatible storage)
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET=tenet-ai

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=text

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Rate limiting (requests per minute per API key)
RATE_LIMIT_RPM=1000

# Maximum prompt length (characters)
MAX_PROMPT_LENGTH=10000

# Enable/disable blocking (set to false for monitor-only mode)
BLOCKING_ENABLED=true

# -----------------------------------------------------------------------------
# Monitoring (Prometheus/Grafana)
# -----------------------------------------------------------------------------
METRICS_ENABLED=true
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Enable debug mode (additional logging, stack traces)
DEBUG=false

# Enable hot reload for development
HOT_RELOAD=true
